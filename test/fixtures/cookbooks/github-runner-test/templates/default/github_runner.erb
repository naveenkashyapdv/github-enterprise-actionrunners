#!/usr/bin/env bash

ORG=$1
PAT=$2
NAME=$3


token=$(curl -s -XPOST \
    -H "authorization: token ${PAT}" \
    https://api.github.com/orgs/${ORG}/actions/runners/registration-token | jq -r .token)

./config.sh \
    --url https://github.com/${ORG} \
    --token ${token} \
    --name ${NAME} \
    --work _work \
    --labels 'self-hosted,Linux,X64' 

sleep 10s

nohup ./run.sh </dev/null &>/dev/null &
sleep 20s